    <span class="sidebar-toggle" data-toggle="push-menu" role="button">
        <i class="fas fa-bars"></i>
    </span>

    <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
            <!-- Control Sidebar Toggle Button -->
