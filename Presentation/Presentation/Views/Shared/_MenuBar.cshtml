            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <!-- User Account: style can be found in dropdown.less -->
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <span class="hidden-xs"> User.Identity.UserName</span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            <p> User.UserName </p>
                        </li>
                        <!-- Menu Body -->
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="/Settings/Profile" class="btn btn-default btn-flat">Profile</a>
                            </div>
                            <div class="pull-right">
                                <form asp-controller="User" asp-action="Logout" method="post" id="logoutForm">
                                    <button type="submit" class="btn btn-danger btn-flat">Sign out</button>
                                </form>
                            </div>
                        </li>
                    </ul>
                </li>

                <!-- Notifications: style can be found in dropdown.less -->
