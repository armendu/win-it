@model Entities.ViewModels.User.ChangePasswordViewModel

<div class="col-md-12">
    <h3>@User?.Identity?.Name</h3>
</div>

<div class="col-md-12">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title"><i class="fa fa-pencil"></i>&nbsp; Change Password</h3>
        </div>
        <div class="box-body">
            @if (Model != null)
            {
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="col-md-5">

                        <input type="hidden" asp-for="Id" class="form-control" disabled/>

                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" value="@Model.Email" disabled />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Retype password</label>
                            <input asp-for="ReTypePassword" class="form-control" type="password" />
                            <span asp-validation-for="ReTypePassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-flat" style="width: 48%;">
                                <i class="fas fa-edit"></i>&nbsp; Save
                            </button>
                            <a class="btn btn-default btn-flat" style="width: 48%; float: right;"
                               asp-controller="User" asp-action="Index">
                                <i class="fa fa-arrow-left">
                                </i>&nbsp; Cancel
                            </a>
                        </div>
                    </div>
                </form>
            }
            else
            {
                <label class="label-danger">User not found!</label>
            }
        </div>
    </div>
</div>
