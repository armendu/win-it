@model Entities.ViewModels.User.LoginViewModel
@{
    Layout = null;
}
<html>
<head>
    <link href="~/plugins/bootstrap-4.0.0/dist/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="~/plugins/bootstrap-4.0.0/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link href="~/css/custom/login.css" rel="stylesheet" />
</head>

<body>
<div class="container">
    <div class="card card-container">
        <h3 style="align-self: center">WinIt</h3>
        <p id="profile-name" class="profile-name-card"></p>
        <form asp-action="Login" asp-controller="User" method="post" class="form-signin">
            <input type="hidden" asp-for="ReturnUrl"/>
            <span id="reauth-email" class="reauth-email"></span>
            <input type="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
            <div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
            <div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div id="remember" class="checkbox">
                <label>
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Sign in</button>
        </form>
        <a href="#" class="forgot-password">
            Forgot your password?
        </a>
    </div><!-- /card-container -->
</div>
</body>
</html>
