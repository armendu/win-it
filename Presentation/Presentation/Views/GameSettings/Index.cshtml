@model Entities.ViewModels.GameSettings.IndexGameSettingsViewModel
@{
    ViewData["Title"] = "- Games Settings";
}
<div class="col-md-12">
    <h3>Games Settings</h3>
</div>
<div class="col-md-12">
    <div class="box box-primary">
        <div class="box-header with-border">
            <a class="btn btn-default btn-flat" asp-controller="GameSettings" asp-action="Create"><i class="fa fa-plus-circle"></i>&nbsp; Create new Game</a>
        </div>
        <div class="box-body">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th width="20%">
                        @Html.DisplayName("Length")
                    </th>
                    <th width="20%">
                        @Html.DisplayName("Winning pot")
                    </th>
                    <th width="20%">
                        @Html.DisplayName("Updated at")
                    </th>
                    <th style="text-align: center">
                        @Html.DisplayName("Actions")
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.GamesSettings)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.GameLength)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WinningPot)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdateAt)
                        </td>
                        <td style="text-align: center">
                            <a class="btn btn-sm btn-default btn-flat custom-btn"
                               asp-action="Edit"
                               asp-route-id="@item.GameSettingId">
                                <i class="fa fa-pencil"></i>&nbsp; Edit
                            </a>
                            <button class="btn btn-sm btn-default btn-flat custom-btn"
                                    data-toggle="modal" data-target="#exampleModalCenter"
                                    data-url="@Url.Action("Details", item)">
                                <i class="fa fa-eye"></i>&nbsp; Details
                            </button>

                        </td>
                    </tr>
                }
                </tbody>
            </table>

            <!-- Modal placeholder -->
            <div id="modal-placeholder"></div>
        </div>
    </div>
</div>